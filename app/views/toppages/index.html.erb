<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <hi>ようこそ、Micropostへ</hi>
      <%= form_for(@micropost) do |f| %>
        <div class="form-group">
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>
        <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-xs-8">
      <%= render 'microposts/microposts', microposts: @microposts, user: @user %>
    </div>
    
    
    <div>
       <li class="<%= 'active' if current_page?(fms_user_path(@user)) %>"><%= link_to fms_user_path(@user), method: :get do %>Favorites <span class="badge"><%= @count_fms %></span><% end %>
         </li>
    </div>
    
    
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Microposts</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>